@model API.Models.UserSubs

@{
    ViewBag.Title = "Details";
}



<div>
    
    <div class="container-fluid ">
        <div class="container " style="background-image: url(/PhotoFiles/@Model.user.BackgroundPictureURL);height:200px">
        </div>
        <div class="container" style="background-color: dimgray">
            <div class="row">
                <div class="col-md-2 col-sm-1">
                    <img class="rounded-circle" style="margin-top:10px" src="~/PhotoFiles/@Model.user.ProfilePictureURL" height="100" width="100" data-holder-rendered="true">
                </div>
                <div class="col-md-4 col-sm-3" style="padding:20px">
                    <h2 style="color:white">@Model.user.Username</h2>
                    <h5 style="color:white">@Model.user.Subscribers Subs</h5>
                </div>
                <div class="col-md-4 col-sm-3" style="padding:20px">

                </div>
                <div class="col-md-2 col-sm-1" style="margin-top:40px;">
                    @if (User.Identity.Name != Model.user.Username)
                    {
                        if (Model.subscribers.Where(x => x.Username == User.Identity.Name).FirstOrDefault() == null)
                        {
                            <div class=" btn btn-danger" style="padding: 15px" onclick="Subscribe()">Subscribe</div>
                        }
                        else
                        {
                            <div class=" btn btn-dark" style="padding: 15px" onclick="Unsubscribe()">Unsubscribe</div>
                        }

                    }
                </div>
            </div>
        </div>

    </div>


</div>
<script type="text/javascript" src="@Url.Content("/Scripts/WebsiteScripts/Subs.js")"></script>